<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/id_plate_image"
        android:background="@color/plate_bg_color"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/app_icon"
        android:layout_weight="0"
        android:layout_marginStart="7dp"/>
    <LinearLayout
        android:gravity="start"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="5dp">
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/status_printing"
                android:layout_gravity="bottom"
                android:id="@+id/id_print_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:maxLines="1"/>
            <TextView
                android:textSize="12sp"
                android:textStyle="normal"
                android:ellipsize="end"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:id="@+id/id_print_task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown"
                android:maxLines="1"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:layout_gravity="bottom"
                android:id="@+id/progressBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:layout_weight="1"
                android:progressTint="@color/status_printing"
                android:indeterminateTint="#000000"
                style="?android:attr/progressBarStyleHorizontal"/>
            <TextView
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/text_time_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€”"
                android:layout_marginStart="5dp"/>
            <TextView
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="@color/text_time_color"
                android:id="@+id/time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
